---
import type { CollectionEntry } from "astro:content";
import Polaroid from "./containers/Polaroid.astro";

interface Props {
    member: CollectionEntry<"members">;
}

const { member } = Astro.props;
const { name, photo } = member.data;
---

<Polaroid
    imageSrc={photo}
    imageDescription={name}
    linkUrl={`/members/${member.id}`}
    randomRotationDegrees={3}
>
    {name}
</Polaroid>
